@using LibraryApp.Models
@model Book

<div class="card radius-15">
	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<h6 class="card-subtitle mb-2">@Model.Author</h6>
		<p class="text-justify">@Model.Description</p>
	</div>
</div>

<h1>Silmek istediğinize emin misiniz?</h1>

<form action="/Management/Book/Delete/@Model.Id" method="post">
	<input type="submit" value="Sil" class="btn btn-danger" />
</form>
