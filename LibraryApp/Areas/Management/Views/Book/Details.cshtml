@using LibraryApp.Models
@model Book

<div class="card radius-15">
	<div class="card-body">
		<h5 class="card-title">@Model.Name</h5>
		<h6 class="card-subtitle mb-2">@Model.Author</h6>
		<h6 class="card-subtitle mb-2">@Model.Category</h6>
		<h6 class="card-subtitle mb-2">@Model.Barcode</h6>
		<h6 class="card-subtitle mb-2">@Model.PageCount</h6>
		<p class="text-justify">@Html.Raw(Model.Brief)</p>
	</div>
</div>